{
  "manifest_version": 3,
  "name": "Third-Party Domain Monitor",
  "version": "1.0",
  "description": "Monitor and display third-party domain calls in a beautiful, non-intrusive way",
  
  "permissions": [
    "webRequest",
    "webNavigation", 
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://www.google.com;"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Third-Party Domain Monitor",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}